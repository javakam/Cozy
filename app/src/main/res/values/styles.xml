<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_main_theme</item>
        <item name="colorPrimaryDark">@color/color_main_theme_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="RightTop2PopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/right_top_in</item>
        <item name="android:windowExitAnimation">@anim/right_top_out</item>
    </style>

    <!-- 加载中弹窗样式 -->
    <dimen name="dimen_dialog_loading_width">@dimen/dp_195</dimen>
    <dimen name="dimen_dialog_loading_height">@dimen/dp_125</dimen>

    <style name="CustomLoadingDialog" parent="AndoDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/rectangle_dialog_white_bg</item>
    </style>

    <style name="AndoLoadingDialogProgressBarStyle">
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:indeterminateDrawable">@drawable/rotate_ando_dialog_loading</item>
        <item name="android:indeterminateDuration">@integer/integer_ando_dialog_loading_duration
        </item>
        <item name="android:tint">@android:color/black</item>
        <item name="android:indeterminateTint">@android:color/black</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="AndoLoadingDialogTextStyle">
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/dp_18</item>
        <item name="android:text">@string/str_ando_dialog_loading_text</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!-- ========== -->

</resources>