<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_main_theme</item>
        <item name="colorPrimaryDark">@color/color_main_theme_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="RightTop2PopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/right_top_in</item>
        <item name="android:windowExitAnimation">@anim/right_top_out</item>
    </style>

    <!-- 加载中弹窗宽高 -->
    <dimen name="dimen_dialog_loading_width">@dimen/dp_190</dimen>
    <dimen name="dimen_dialog_loading_height">@dimen/dp_118</dimen>

</resources>